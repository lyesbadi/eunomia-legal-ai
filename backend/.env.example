# ==============================================================================
# EUNOMIA - Backend Environment Variables Template
# ==============================================================================
# IMPORTANT: Copy this file to .env.production and fill with REAL values
# cp backend/.env.example backend/.env.production

# ==============================================================================
# APPLICATION
# ==============================================================================
APP_NAME=EUNOMIA Legal AI
VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# ==============================================================================
# SECURITY (CHANGE ALL THESE IN PRODUCTION!)
# ==============================================================================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==============================================================================
# CORS (Update with your actual domain)
# ==============================================================================
ALLOWED_ORIGINS=https://lyesbadii.xyz,https://www.lyesbadii.xyz
ALLOWED_HOSTS=lyesbadii.xyz

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
POSTGRES_USER=eunomia_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=eunomia_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://eunomia_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/eunomia_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD= 
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# ==============================================================================
# CELERY
# ==============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300

# ==============================================================================
# OLLAMA (LLM)
# ==============================================================================
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=mistral:7b-instruct-v0.3-q8_0
OLLAMA_TIMEOUT=120

# ==============================================================================
# QDRANT (Vector Database)
# ==============================================================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=legal_docs
QDRANT_VECTOR_SIZE=384

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_ANALYZE=10/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_UPLOAD=20/hour

# ==============================================================================
# GDPR / RGPD
# ==============================================================================
DATA_RETENTION_DAYS=2555
LOG_RETENTION_DAYS=90
GDPR_DPO_EMAIL=chougarlyes12@gmail.com
GDPR_DPO_NAME=Data Protection Officer

# ==============================================================================
# FILE UPLOAD
# ==============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.txt
UPLOAD_DIR=/app/uploads

# ==============================================================================
# MONITORING
# ==============================================================================
PROMETHEUS_ENABLED=True
LOG_LEVEL=INFO

# ==============================================================================
# GRAFANA
# ==============================================================================
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD

# ==============================================================================
# FLOWER (Celery Monitoring)
# ==============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_ME_FLOWER_PASSWORD

# ==============================================================================
# DOMAIN (for SSL certificates)
# ==============================================================================
DOMAIN=lyesbadii.xyz
